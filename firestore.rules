rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Coleção de colaboradores (aniversariantes) – Lembrete Juliana / Agropecuária Stival
    match /employees/{employeeId} {
      // Ajuste conforme sua autenticação:
      // - allow read, write: if false;  // ninguém (desabilitado)
      // - allow read, write: if request.auth != null;  // qualquer usuário logado
      // - allow read, write: if request.auth != null && request.auth.token.email_verified;
      allow read, write: if request.auth != null;
    }
  }
}
